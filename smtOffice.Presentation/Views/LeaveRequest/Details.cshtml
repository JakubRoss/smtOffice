@model smtOffice.Application.DTOs.LeaveRequestDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Leave Request</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AbsenceReason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AbsenceReason)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.EndDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
@if(Model.Status == "New")
{
    <form asp-action="Submit" asp-controller="LeaveApproval" method="post" class="d-inline">
        <input type="hidden" name="leaveRequestID" value="@Model.ID" />
        <button type="submit" class="mt-5 btn btn btn-info">Submit Request</button>
    </form>
    <hr />
    <form asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" name="leaveRequestID" value="@Model.ID" />
        <button type="submit" class="mt-5 btn btn-outline-danger">Delete</button>
    </form>
}
