@model smtOffice.Application.DTOs.EmployeeDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="PasswordHash" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subdivision" class="control-label"></label>
                <select asp-for="Subdivision" class="form-control" asp-items="Model.Subdivisions">
                    <option value="">-- Select Subdivision --</option>
                </select>
                <span asp-validation-for="Subdivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class="form-control" asp-items="Model.Positions">
                    <option value="">-- Select Position --</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> HR Manager</label>
                <select asp-for="PeoplePartnerID" class="form-control" asp-items="Model.HRManagers">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="PeoplePartnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark mt-4" />
            </div>
        </form>
    </div>
</div>

<div class ="mt-2">
    <a asp-controller="Employee" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
