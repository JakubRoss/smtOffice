@model smtOffice.Application.DTOs.EmployeeDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EmployeeDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subdivision" class="control-label"></label>
                <select asp-for="Subdivision" class="form-control" asp-items="Model.Subdivisions">
                    <option value="">-- Select Subdivision --</option>
                </select>
                <span asp-validation-for="Subdivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class="form-control" asp-items="Model.Positions">
                    <option value="">-- Select Position --</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> HR Manager</label>
                <select asp-for="PeoplePartnerID" class="form-control" asp-items="Model.HRManagers">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="PeoplePartnerID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@(new SelectList(new List<string> { "Active", "Inactive" }))">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark mt-4" />
            </div>
            <div>
                <a style="margin-left:-15px" asp-controller="Employee" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-link">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
