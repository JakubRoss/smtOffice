@model smtOffice.Application.DTOs.EmployeeDTO

@{
    ViewData["Title"] = "EmployeeDetails";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <ul>
            <li>@TempData["ErrorMessage"]</li>
        </ul>
    </div>
}

<h1>@Model.FullName</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subdivision)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subdivision)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            HrManager
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.hrmanager
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OutOfOfficeBalance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OutOfOfficeBalance)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new{ id = Model.ID}) |
    <a asp-action="Index">Back to List</a> 
</div>
<div>
    <form asp-area="" asp-controller="Employee" asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.ID" />
        <button type="submit" class="btn btn-outline-danger mt-5">Delete</button>
    </form>
</div>